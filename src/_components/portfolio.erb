<%= render UI::Card.new(as: "li") do %>
  <% unless thumbnail.to_s.strip.empty? %>
      <img src="/images/portfolios/<%= thumbnail %>" alt="<%= name %> cover image" class="h-48 w-full object-cover rounded-md relative z-10 shadow-2xl">
  <% end %>

  <h2 class="mt-6 text-base font-semibold text-zinc-800">
    <%= render UI::Card::Link.new(link.href, **link_options) do %>
      <%= name %>
    <% end %>
  </h2>

  <%= render UI::Card::Description.new(description) %>

  <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-primary-500">
    <% if link.label == "Android Development" %>
      <%= svg "images/icons/android.svg", class: "h-6 w-6 flex-none" %>
    <% elsif link.label == "React Native" %>
      <%= svg "images/icons/react-native.svg", class: "h-6 w-6 flex-none" %>
    <% elsif link.label == "Flutter" %>
      <%= svg "images/icons/flutter.svg", class: "h-6 w-6 flex-none" %>
    <% else %>
      <%= svg "images/icons/chrome.svg", class: "h-6 w-6 flex-none" %>
    <% end %>
    <span class="ml-2"><%= link.label %></span>
  </p>
<% end %>
