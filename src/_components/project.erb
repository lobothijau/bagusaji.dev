<%= render UI::Card.new(as: "li") do %>
  <img src="/images/projects/<%= thumbnail %>" alt="<%= name %> cover image" class="object-cover rounded-md">

  <h2 class="mt-6 text-base font-semibold text-zinc-800">
    <%= render UI::Card::Link.new(link.href, **link_options) do %>
      <%= name %>
    <% end %>
  </h2>

  <%= render UI::Card::Description.new(description) %>

  <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-primary-500">
    <%= svg "images/icons/mini/link.svg", class: "h-6 w-6 flex-none" %>
    <span class="ml-2"><%= link.label %></span>
  </p>
<% end %>
